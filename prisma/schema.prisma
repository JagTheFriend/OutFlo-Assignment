generator client {
    provider = "prisma-client-js"
    output   = "../src/lib/generated/prisma-client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Campaign {
    id String @id @default(uuid())

    name        String
    description String
    // i.e ACTIVE | DELETED etc
    status      String

    leads      String[]
    accountIDs String[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([id, name])
}
